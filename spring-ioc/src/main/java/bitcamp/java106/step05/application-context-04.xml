<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!-- 컬렉션 타입의 프로퍼티 값 설정하기 -->
    
    <bean id="c1" class="bitcamp.java106.step05.Car4">
        <!-- Properties 프로퍼티 값 설정하기 -->
        <property name="options">
            <props>
                <prop key="sunroof">true</prop>
                <prop key="auto">true</prop>
                <prop key="jdbc.username">java106</prop>
                <prop key="jdbc.password">1111</prop>
            </props>
            <map>
                <entry>
                    <key><value>sunroof</value></key>
                    <value>true</value>
                </entry>
                <entry key="auto" value="true"/>
                <entry key="spareTire">
                        <!-- 객체를 바로 만들어 넣고 싶다면 bean 태그를 사용하라! -->
                        <bean class="bitcamp.java106.step05.Tire" p:maker="비트타이어"/>
                </entry>
                <entry key="engine" value-ref="e1"/>
            </map>
        </property>
    </bean>
    
    <bean id="e1" class="bitcamp.java106.step05.Engine" p:maker="비트자동차"/>
          
</beans>
